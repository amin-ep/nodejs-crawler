{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}